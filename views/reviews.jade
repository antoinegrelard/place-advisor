extends layout

block content
	p All reviews

	ul
		each review, index in reviews
			li
				ul
					li
						a(href="/review/#{review.id}") view
					li= review.name
					li= review.placeType
					li 
						- for (var i = 0; i < review.stars; ++i)
							img(src="/images/star.png", alt="star icon" class="star")
					li
						button(type="button", onclick="Remove('#{review.id}')" ) delete
	a(href="/reviews/add") add a review
	a(href="/reviews/top") top places
	a(href="/search") search